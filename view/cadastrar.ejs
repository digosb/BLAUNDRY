<%- include ("./parciais/head.ejs") %>
<body>
<%- include ("./parciais/navbar.ejs") %>

    <div class="container">
        <div class="card" id="formulárioLavanderia">
            <div class="card-header">
                <h3>Cadastrar</h3>
                <div class="card-body">
                    <form method="POST" action="/formCadastrar">
                        <div>
                            <label>Nome Completo</label>
                            <input type="text" name="nome"  style="text-transform:uppercase"  placeholder="Digite seu Nome completo" class="form-control">
                        </div>

                        <div>
                            <label>RG</label>
                            <input type="text" name="rg" placeholder="Digite seu RG" class="form-control">
                        </div>
                        <div>
                            <label>CPF</label>
                            <input type="text" name="cpf" placeholder="Digite seu CPF" class="form-control">
                        </div>
                        <div>
                            <label>Data de Nascimento</label>
                            <input type="date" name="dataNasc" placeholder="Digite sua data de nascimento" class="form-control">
                        </div>
                        <div>
                            <label>Endereço</label>
                            <input type="text" name="endereço" style="text-transform:uppercase" placeholder="Digite sua Rua" class="form-control">
                        </div>
                        <div>
                            <label>Complemento</label>
                            <input type="text" name="complemento" style="text-transform:uppercase" placeholder="Digite o complemento" class="form-control">
                        </div>
                        <div>
                            <label>Cidade</label>
                            <input type="text" name="cidade" style="text-transform:uppercase" placeholder="Digite a cidade" class="form-control">
                        </div>
                        <div>
                            <label>Bairro</label>
                            <input type="text" name="bairro" style="text-transform:uppercase" placeholder="Digite o bairro" class="form-control">
                        </div>
                        <div>
                            <label>UF</label>
                            <input type="text" name="uf" style="text-transform:uppercase" placeholder="Digite a UF" class="form-control">
                        </div>
                        <div>
                            <label>CEP</label>
                            <input type="text" name="cep" placeholder="Digite o CEP" class="form-control">
                        </div>
                        <div>
                            <label>Telefone</label>
                            <input type="text" name="telefone" placeholder="Digite o telefone" class="form-control">
                        </div>
                        <div>
                            <label>E-mail</label>
                            <input type="email" name="email" style="text-transform:lowercase" placeholder="Digite seu e-mail" class="form-control">
                        </div>

                        <div>
                            <label>Senha</label>
                            <input type="password" name="senha" placeholder="Digite sua senha" class="form-control">
                        </div>

                        <div>
                            <label>Repetir Senha</label>
                            <input type="password" name="repetirSenha" placeholder="Digite a senha novamente" class="form-control">
                        </div>

                        <div>
                            <br>
                            <button class="btn btn-primary">Cadastrar</button>
                        </div>

                    </form>

                </div>

            </div>

        </div>

    </div>

</body>
<%- include ("./parciais/footer.ejs") %>